{
    "name": "gpupo/camel-webspider",
    "description": "Web crawler para coleta de documentos a partir de fontes e interesses",
    "homepage": "http://www.g1mr.com/camel-webspider/",
    "authors": [
        {
            "name": "Gilmar Pupo",
            "email": "g@g1mr.com"
        }
    ],
    "license": "MIT",
    "keywords": ["Camel Spider", "spider", "crawler"],
    "repositories": [
        {
            "type": "pear",
            "url":  "http://pear.horde.org"
        }
    ],
    "require": {
        "gpupo/common-sdk":             "~1.0",
        "fabpot/goutte":                "~2.0",
        "zendframework/zend-cache":     "~2.0",
        "zendframework/zend-http":      "~2.0",
        "zendframework/zend-uri":       "~2.0",
        "zendframework/zend-validator": "~2.0"
    },
    "suggest": {
        "monolog/monolog": "Write Log messages"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "monolog/monolog": "~1.12",
        "codeclimate/php-test-reporter": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Gpupo\\CamelWebspider\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gpupo\\Tests\\CamelWebspider\\": "tests"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability" : "stable"
}
